generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username          String         @id @unique
  hashedPassword    String
  posts             Post[]
  profilePicture    String
  outgoingRelations UserRelation[] @relation(name: "From")
  incomingRelations UserRelation[] @relation(name: "To")
}

model UserRelation {
  fromUser     User             @relation(fields: [fromUserId], references: [username], name: "From")
  fromUserId   String
  toUser       User             @relation(fields: [toUserId], references: [username], "To")
  toUserId     String
  relationship UserRelationship

  @@id([fromUserId, toUserId])
}

model Post {
  id          String   @id @default(cuid())
  content     String
  picture     String?
  publishedAt DateTime
  author      User     @relation(fields: [authorId], references: [username])
  authorId    String
}

enum UserRelationship {
  FRIEND
  FOLLOW
}
